{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "rootDir": "./",    
    "baseUrl": "./",   
    "paths": {
      "@paper-trail/*": [
        "packages/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true
  }
}
